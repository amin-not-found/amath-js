{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["DOM", "ES6", "DOM.Iterable"],
    "moduleResolution": "Node",
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["examples/*", "lib/*"]
}
